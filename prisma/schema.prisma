generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

enum CourseStatus {
  Active
  Archived
  Private
}

model Course {
  id          Int          @id @default(autoincrement())
  name        String       @unique
  description String       @db.Text
  status      CourseStatus @default(Active)
  created_at  DateTime     @default(now())
  updated_at  DateTime     @updatedAt
  categories  Category[]

  @@index([name])
  @@index([status])
}

model Category {
  id         Int       @id @default(autoincrement())
  name       String
  created_at DateTime  @default(now())
  updated_at DateTime  @updatedAt
  problems   Problem[]
  courseId   Int
  course     Course    @relation(fields: [courseId], references: [id], onDelete: Cascade)

  @@unique([name, courseId])
  @@index([courseId])
  @@index([name])
}

model Problem {
  id            Int      @id @default(autoincrement())
  name          String   @unique
  description   String   @db.Text
  code_snippet  String   @db.Text
  correct_lines String   @db.Text
  reason        Json     @db.Json
  hint          String   @db.Text
  categoryId    Int
  category      Category @relation(fields: [categoryId], references: [id], onDelete: Cascade)
  created_at    DateTime @default(now())
  updated_at    DateTime @updatedAt

  @@index([categoryId])
  @@index([name])
}
